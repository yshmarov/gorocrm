<h3>
  <div class="text-center">
    Calendar
  </div>
</h3>

<br>

<div class="card shadow">
  <div class="card-body">
    <div class="table-responsive">
      <%= month_calendar(events: @tasks, attribute: :calendar_date) do |date, tasks| %>
        <%= date %>
      
        <% tasks.each do |task| %>
          <br/>
          <%= link_to task_path(task), class: "badge badge-#{task.status_color}" do %>
            <%= task.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
