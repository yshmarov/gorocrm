
<%= simple_form_for(@tenant) do |f| %>
  <% if @tenant.errors.any? %>
    <ul class="text-danger">
      <% @tenant.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>

    <% if @tenant.logo.attached? %>
      <%= image_tag @tenant.logo, size: "50x50" %>
      <%= @tenant.logo.filename %>
      <%= number_to_human_size(@tenant.logo.byte_size) %>
    <% end %>
    <%= f.input :logo %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
