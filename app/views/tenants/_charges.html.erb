<% model_class = Charge %>
<h3>
  <div class="text-center">
    <%= t('activerecord.models.charges') %>
    <div class="badge bg-info">
      <%= @charges.count %>
    </div>
  </div>
</h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id).capitalize %></th>
        <th><%= model_class.human_attribute_name(:created_at).capitalize %></th>
        <th><%= model_class.human_attribute_name(:metadata).capitalize %></th>
      </tr>
    </thead>
    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <td><%= charge.id %></td>
          <td><%= charge.created_at %></td>
          <td><%= charge.metadata %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
