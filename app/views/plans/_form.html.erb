
<%= simple_form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <ul class="text-danger">
      <% @plan.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :currency, collection: [ "usd", "eur", "pln", "uah", "rub"], include_blank: false %>
    <%= f.input :interval, collection: Plan::INTERVALS, include_blank: false, as: :radio_buttons %>

    <%= f.input :max_members %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
