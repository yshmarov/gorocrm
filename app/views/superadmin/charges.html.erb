<% model_class = Charge %>
<h3>
  <div class="text-center">
    <%= t('activerecord.models.charges') %>
    <div class="badge badge-info">
      <%= @charges.count %>
    </div>
  </div>
</h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id).capitalize %></th>
        <th><%= sort_link(@q, :tenant_name, model_class.human_attribute_name(:tenant).capitalize) %></th>
        <th><%= model_class.human_attribute_name(:subscription).capitalize %></th>
        <th><%= sort_link(@q, :created_at, :created_at) %></th>
        <th><%= model_class.human_attribute_name(:metadata).capitalize %></th>
      </tr>
    </thead>
  
    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <td><%= link_to charge.id, charge_path(charge) %></td>
          <td><%= charge.tenant %></td>
          <td><%= charge.subscription_id %></td>
          <td><%= charge.created_at %></td>
          <td><%= charge.metadata %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
