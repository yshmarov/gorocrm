
<%= simple_form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <ul class="text-danger">
      <% @client.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.label :tags %>
    <%= f.select :tag_ids, Tag.where(category: "client").pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
