<% model_class = Client %>
<div class="card shadow">
  <div class="card-header">
    <h4>
      Client
    </h4>
  </div>
  <div class="card-body">
  
    <b>Name:</b>
    <%= @client.name %>
    <br>
  
    <b>Email:</b>
    <%= @client.email %>
    <br>
  
    <b>Address:</b>
    <%= @client.address %>
    <br>
  
    <b>Phone:</b>
    <%= @client.phone %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to t(".edit", default: t("helpers.links.edit")).capitalize, edit_client_path(@client), class: "btn btn-sm btn-warning" %>
    <%= link_to t(".destroy", default: t("helpers.links.destroy")).capitalize, @client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    <%= link_to t(".back", default: t("helpers.links.back")).capitalize, clients_path, class: "btn btn-sm btn-secondary" %>
  </div>
</div>
